<section>
  <div class='col-sm-10 col-sm-offset-1'>
    <header>
      <h3 class='titles'><%= "#{@user.full_name}" %>'s Profile</h3>
    </header>
    <p class='cartless'>Email: <%= @user.email %></p>
  </div>
</section>

<% content_for(:sidebar) do %>
  Actions
  <hr class='sidebar-hr'>
  <ul class='sidebar-link'>
    <li><%= link_to 'Delete', user_path(@user), method: :delete, class: 'btn btn-default btnwidth',
        data: { confirm: "Are you sure you want to delete #{@user.full_name}?"} %></li>
  </ul>
  <hr class='sidebar-hr'>
<% end %>
