<%= bootstrap_form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
  <div class='form-group'>
    <label class="control-label col-sm-3">First name</label>
    <div class='col-sm-9'>
      <%= f.text_field :first_name, class: 'form-control', hide_label: true %>
    </div>
  </div>

  <div class='form-group'>
    <label class="control-label col-sm-3">Last name</label>
    <div class='col-sm-9'>
      <%= f.text_field :last_name, class: 'form-control', hide_label: true %>
    </div>
  </div>

  <div class='form-group'>
    <label class="control-label col-sm-3">Email</label>
    <div class='col-sm-9'>
      <%= f.email_field :email, class: 'form-control', hide_label: true %>
    </div>
  </div>

  <div class='form-group'>
    <label class="control-label col-sm-3">Password</label>
    <div class='col-sm-9'>
      <%= f.password_field :password, class: 'form-control', hide_label: true %>
    </div>
  </div>

  <div class='form-group'>
    <label for='user_password_confirmation' class="control-label col-sm-3">Confirmation</label>
    <div class='col-sm-9'>
      <%= f.password_field :password_confirmation, class: 'form-control', hide_label: true %>
    </div>
  </div>

  <div class='form-group actions control-group'>
    <div class='col-sm-offset-3'>
      <%= f.submit class:'btn btn-primary' %>
    </div>
  </div>
<% end %>
