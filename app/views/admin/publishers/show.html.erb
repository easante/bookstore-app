<section>
  <div class='row'>
    <div class='col-sm-10 col-sm-offset-1'>
      <header>
        <h3 class='titles'><%= "#{@publisher.name}" %>'s Details</h3>
      </header>
    </div>
  </div>
</section>

<% content_for(:sidebar) do %>
  Actions
  <hr class='sidebar-hr'>
  <ul class='sidebar-link'>
    <li><%= link_to 'Edit', [:edit, :admin, @publisher], class: 'btn btn-default btnwidth' %></li>
    <li><%= link_to 'Delete', [:admin, @publisher], method: :delete, class: 'btn btn-default btnwidth',
        data: { confirm: "Are you sure you want to delete #{@publisher.name}?"} %></li>
  </ul>
  <hr class='sidebar-hr'>
<% end %>
