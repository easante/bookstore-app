<section>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= bootstrap_form_tag url: password_resets_path,
                            html: { class:'form-horizontal' } do |f| %>
        <div>
          <h3 class='text-center'>Forgotten Your Password?</h3>
          <br>
          <p class="col-sm-offset-3">Enter your email address and click on the 'Reset Password' button
            and a link will be sent to you to reset your password.
          </p>
          <br>

          <div class='form-group'>
            <label class='control-label col-sm-3'>Email Address</label>
            <div class='col-sm-7'>
              <%= f.email_field :email, class: 'form-control', hide_label: true %>
            </div>
          </div>

          <div class='form-group actions control-group'>
            <div class='col-sm-offset-3'>
              <%= f.submit "Reset Password", class: 'btn btn-primary' %>
            </div>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</section>
